{% schema %}
{
    "name": "Text Columns",
    "settings": [
    ],
   "max_blocks": 2,
    "blocks": [
        {
           "name": "Column",
           "type": "column",
          "settings": [
              {
                 "type": "text",
                 "id": "heading",
                 "label": "Heading",
                "default": "Section Title Here"
              },
              {
