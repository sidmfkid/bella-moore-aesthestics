{% assign image = section.settings.image %}

<div class="image-with-text">
    <div class="image-with-text__content">
        <div class="image-with-text__image">
{%- if image != blank -%}
            <img srcset="{%- if image.width >= 165 -%}{{image |image_url: width: 165}} 165w,{%- endif -%}
            {%- if image.width >= 360 -%}{{image |image_url: width: 360}} 360w,{%- endif -%}
            {%- if image.width >= 535 -%}{{image |image_url: width: 535}} 535w,{%- endif -%}
            {%- if image.width >= 750 -%}{{image |image_url: width: 750}} 750w,{%- endif -%}
            {%- if image.width >= 1070 -%}{{image |image_url: width: 1070}} 1070w,{%- endif -%}
            {%- if image.width >= 1500 -%}{{image |image_url: width: 1500}} 1500w,{%- endif -%}
            {{ image | image_url }} {{ image.width }}w"
            src="{{ image | img_url: width: 1200 }}"
            sizes="(max-width: 1500px) calc(20rem+5vw), (max-width: 900px) calc(20rem+5vw)"
            loading="lazy" width="{{ image.width }}"
            height="{{ image.height }}"
            alt="{{ image.alt | escape }}">
            {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg'}}
{%- endif -%}

        </div>
        <div class="image-with-text__text-box">
            <h2 class="image-with-text__heading">{{ section.settings.title }}</h2>
            <p class="image-with-text__para">{{ section.settings.para }}</p>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Image With Text Section",
    "settings": [
        {
        "type": "text",
        "id": "title",
        "label": "Type In A Heading"
        },
        {
        "type": "textarea",
        "id": "para",
        "label": "Type In A Description"
        },
        {
        "type": "select",
        "id": "image_position",
        "label": "Image Position",
        "options": [
                {
                "value": "reverse",
                "label": "Right"
                },
                {
                "value": "row",
                "label": "Left"
                }
            ],
            "default": "row"
        },
        {
        "type": "image_picker",
        "id": "image",
        "label": "Select An Image"
        },
        {
        "type": "header",
        "content": "Button Settings"
        },
        {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
        },
        {
        "type": "text",
        "id": "button_text",
        "label": "Type Button Text"
        }
    ],
    "presets": [
        {
            "category": "Images",
            "name":"Image With Text 2"
        }
    ]
} {% endschema %}