<div class="text-overlay-image">
    <div class="text-overlay-image__bg-image-container">
        <img srcset="{%- if section.settings.image.width >= 400 -%}{{ section.settings.image | image_url: width: 400 }} 400w,{%- endif -%}
        {%- if section.settings.image.width >= 600 -%}{{ section.settings.image | image_url: width: 600 }} 600w,{%- endif -%}
        {%- if section.settings.image.width >= 900 -%}{{ section.settings.image | image_url: width: 900 }} 900w,{%- endif -%}
        {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
        {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
        sizes="(max-width: 400px) 1080px, (max-width: 600px) 950px,(max-width: 900px) 1200px "
        width="{{ section.settings.width }}"
        height="{{ section.settings.height }}"
        src="{{ section.settings.image | image_url: width: 1500 }}"
        loading="lazy"
        class="text-overlay-image__bg-image">
    </div>
    <div class="text-overlay-image__logo-container">
        {%- assign logo_alt = section.settings.logo.alt | default: shop.name | escape -%}

        {{ section.settings.logo | image_url: width: section.settings.logo.width | image_tag:
            class: 'text-overlay-image__logo',
            widths: '50, 100, 150, 200, 250, 300, 400, 500',
            height: section.settings.logo.height,
            width: section.settings.logo.width,
            alt: logo_alt,
            sizes: '(max-width: 1500) 100px, (max-width: 400) 100px'
          }}
        <!-- <img width="100" height="100" src="{{ section.settings.logo | image_url }}" alt="" class="text-overlay-image__logo"> -->
    </div>
    <div class="text-overlay-image__content">
        <div class="text-overlay-image__header-container">
            <h2 class="text-overlay-image__header">{{ section.settings.heading }}</h2>
        </div>
        <div class="text-overlay-image__para">{{ section.settings.para }}</div>
        <div class="text-overlay-image__btn">
            <a href="{{ section.settings.button__link }}" class="btn btn__primary--md">{{ section.settings.button__text }}</a>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Text Overlay Section",
    "settings": [
        {
           "type": "header",
           "content": "Images"
        },
        {
           "type": "image_picker",
           "id": "logo",
           "label": "Logo"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Background Image"
        },
        {
           "type": "header",
           "content": "Text"
        },
        {
           "type": "text",
           "id": "heading",
           "label": "Heading"
        },
        {
           "type": "textarea",
           "id": "para",
           "label": "Paragraph(s)",
            "default": "Go into detail about what sets your business apart from others in your industry"
        },
        {
            "type": "text",
            "id": "button__text",
            "label": "Button Text"
        },
        {
           "type": "url",
           "id": "button__link",
           "label": "Button Link"
        }
    ]
} {% endschema %}