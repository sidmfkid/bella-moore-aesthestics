<div data-animate="fadeIn" class="page-text-overlay-bg">
  <div class="page-text-overlay-bg__bg-container">
    <img loading="lazy" alt="" class="page-text-overlay-bg__bg" src="{{ 'callout-bg-1.svg' | asset_url }}">
  </div>

  <div class="page-text-overlay-bg__content">
    <div class="page-text-overlay-bg__heading-container">
      <h2 class="page-text-overlay-bg__heading">
        {{ section.settings.para }}
      </h2>
    </div>
    <div class="page-text-overlay-bg__para-container">
      <p class="page-text-overlay-bg__para">
        {% if section.settings.para == blank %}
          {{ product.metafields.my_fields.product_info_3.value }}
        {% else %}
          {{ section.settings.para }}
        {% endif %}
      </p>
    </div>
    <div class="page-text-overlay-bg__button-container">
      <a class="page-text-overlay-bg__button btn btn__secondary--md" href="{{ section.settings.button_link }}">
        {{- section.settings.button_text -}}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text Overlay 2",
  "settings": [
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "para",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Booking"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
