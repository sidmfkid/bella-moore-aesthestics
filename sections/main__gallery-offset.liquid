<div class="gallery-offset">
    <div class="gallery-offset__center-image">
        <img alt="" class="gallery-offset__image" height="615" src="{{ section.settings.image__main | image_url }}" width="1200">
        <div class="gallery-offset__heading-container">
            <h2 class="gallery-offset__heading">{{ section.settings.heading }}</h2>
        </div>

        <div class="gallery-offset__offset-image-container">
            <img alt="" class="gallery-offset__offset-image" height="615" src="{{ section.settings.image__main | image_url }}" width="1200">
        </div>
    </div>
</div>

{% schema %}
{
"name": "main__gallery-offset",
"settings": [
{
   "type": "image_picker",
   "id": "image__main",
   "label": "Main Image"
},
{
   "type": "text",
   "id": "heading",
   "label": "Heading",
   "default": "Gallery"
}
]
} {% endschema %}